
open Printf

open Maps

let debug_enabled = ref false

let set_debug bool = debug_enabled := bool

let debug fmt =
  Printf.kprintf
    (
      if !debug_enabled then
	(fun s -> Format.printf "[Anomaly_detailed_metrics_container]: %s@." s)
      else
	ignore
    )
    fmt

type t =
  {
    detailed_metrics : Detailed_metrics.t;
    network_attributes : Network_attributes.t;
  }

let new_t
    detailed_metrics
    network_attributes
    =
  {
    detailed_metrics = detailed_metrics;
    network_attributes = network_attributes;
  }

let of_detailed_metrics
    detailed_metrics
    =
  new_t
    detailed_metrics
    (Network_attributes.of_detailed_metrics detailed_metrics)

let fusion t1 t2 =
  failwith "Classification_data: CANNOT use fusion"

let to_string t =
  failwith "Classification_data: CANNOT use to_string"
